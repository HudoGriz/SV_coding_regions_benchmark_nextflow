/*
========================================================================================
    Module-specific container and configuration settings
========================================================================================
    Defines Docker/Singularity containers for each bioinformatics tool
----------------------------------------------------------------------------------------
*/

process {
    
    // Samtools for BAM/FASTA indexing
    withName: 'SAMTOOLS_.*' {
        container = 'quay.io/biocontainers/samtools:1.19.2--h50ea8bc_1'
    }
    
    // Manta for Illumina short-read SV calling
    withName: 'MANTA_.*' {
        container = 'quay.io/biocontainers/manta:1.6.0--h9ee0642_1'
    }
    
    // Delly for short-read SV calling
    withName: 'DELLY_.*' {
        container = 'quay.io/biocontainers/delly:1.1.6--hf5e1c6e_1'
    }
    
    // Lumpy for short-read SV calling
    withName: 'LUMPY_.*' {
        container = 'quay.io/biocontainers/lumpy-sv:0.3.1--h779adbc_3'
    }
    
    // TIDDIT for short-read SV calling
    withName: 'TIDDIT_.*' {
        container = 'quay.io/biocontainers/tiddit:3.6.1--py310h5aa3a86_0'
    }
    
    // PBSV for PacBio long-read SV calling
    withName: 'PBSV_.*' {
        container = 'quay.io/biocontainers/pbsv:2.9.0--h9ee0642_1'
    }
    
    // Sniffles for long-read SV calling
    withName: 'SNIFFLES_.*' {
        container = 'quay.io/biocontainers/sniffles:2.2--pyhdfd78af_0'
    }
    
    // cuteSV for long-read SV calling
    withName: 'CUTESV_.*' {
        container = 'quay.io/biocontainers/cutesv:2.0.3--pyhdfd78af_0'
    }
    
    // SURVIVOR for VCF merging
    withName: 'SURVIVOR_.*' {
        container = 'quay.io/biocontainers/survivor:1.0.7--h9a82719_1'
    }
    
    // Truvari for SV benchmarking
    withName: 'TRUVARI_.*' {
        container = 'quay.io/biocontainers/truvari:4.0.0--pyhdfd78af_0'
    }
    
    // BCFtools for VCF manipulation
    withName: 'BCFTOOLS_.*' {
        container = 'quay.io/biocontainers/bcftools:1.19--h8b25389_0'
    }
    
    // Tabix for VCF indexing
    withName: 'TABIX_.*' {
        container = 'quay.io/biocontainers/tabix:1.11--hdfd78af_0'
    }
}
